<!DOCTYPE html>
<html>
<head>
  <title><%= t "profile.title"  %></title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <!-- google fonts -->
  <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
  <link href="//fonts.googleapis.com/css?family=Montserrat:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=cyrillic,cyrillic-ext,latin-ext,vietnamese" rel="stylesheet">
  <!-- //google fonts -->
</head>

<body id="home">
  <!-- banner -->
  <nav class="w3-navbar">
    <div class="nav-top">
      <div class="w3layouts-nav-right">
        <div class="fat-nav">
          <div class="fat-nav__wrapper">
            <div class="topnav" id="myTopnav">
              <ul>
                <li>
                  <%= link_to root_path do %>
                    <%= t "profile.home" %>
                  <% end %>
                </li>
                <li>
                  <%= link_to "#about" do %>
                    <%= t "profile.about_me" %>
                  <% end %>
                </li>
                <li>
                  <%= link_to "#skills" do %>
                    <%= t "profile.skills" %>
                  <% end %>
                </li>
                <li>
                  <%= link_to "#experience" do %>
                    <%= t "profile.work_experiences" %>
                  <% end %>
                </li>
                <li>
                  <%= link_to "#contact" do %>
                    <%= t "profile.contacts" %>
                  <% end %>
                </li>
                <li>
                  <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                    <%= fa_icon("bars") %>
                  </a>
                </li>
              </ul>
            </div>
          </div>
          <div class="right">
            <div class="w3-socials">
              <%= render "social_medias" %>
            </div>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <%= yield %>

  <div class="w3l_footer">
  		<div class="container">
  			<h3><%= t("profile.thanks") %></h3>
  			<div class="connect-social">
  				<%= render "social_medias" %>
  			</div>
        <div class="row">
      		<p class="agileits_w3ls_copyright">Â© <%= Date.today.year %> Professional CV. All rights reserved | Design by <%= link_to "W3layouts", "https://www.w3layouts.com" %></p>
      		<div class="arrow-container animated fadeInDown">
      			<a href="#home" class="arrow-2 scroll">
      				<i class="fa fa-angle-up"></i>
      			</a>
      			<div class="arrow-1 animated hinge infinite zoomIn"></div>
    		</div>
      </div>
		</div>
	</div>
	<!--//footer -->

  <script>
  function myFunction() {
      var x = document.getElementById("myTopnav");
      if (x.className === "topnav") {
          x.className += " responsive";
      } else {
          x.className = "topnav";
      }
  }
  </script>
</body>
</html>
